<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorBackCardView"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="14dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/profilImage"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/nav_header_desc"
        app:srcCompat="@drawable/profile_img0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent" >

        <TextView
            android:id="@+id/profilName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="Unkown"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
    <TextView
        android:id="@+id/profilEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@+id/profilName"
        android:layout_marginBottom="7dp"
        android:text="Unkown" />

        <TextView
            android:id="@+id/nav_profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:text="Profile"
            android:textColor="#000"
            android:onClick="navProfilFun"
            android:layout_alignParentEnd="true"
            android:drawableLeft="@drawable/ic_menu_profile"
            android:layout_alignBottom="@+id/profilName"
            />
    </RelativeLayout>

</LinearLayout>
